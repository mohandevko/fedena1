<%= form_for(:user, :as => :user, :url => session_path(:user)) do |f| %>
  <table>
    <tr>
      <td><%= f.email_field :email, :class => "example-field", :title => "Email" %></td>
      <td><%= f.password_field :password, :class => "example-field", :title => "Password" %></td>
    </tr>
    <tr>
      <td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
      <td>
        <%= f.submit "Sign in" %>
        <%= link_to "SignUp", new_user_registration_path %>
      </td>
    </tr>
  </table>
<% end %>
